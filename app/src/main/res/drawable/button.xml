<?xml version="1.0" encoding="UTF-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 --><item>
    <shape android:shape="rectangle">
        <solid
    android:color="#FFAD33" />
    <corners
        android:radius="25dp" />

</shape>
</item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:right="1dp"
        android:top="1dp"
        android:left="1dp">
        <shape>
            <gradient
                android:startColor="#FFA011"
                android:centerColor="#FFAD33"
                android:endColor="#FFDDAA"
                android:type="linear"
                android:angle="90"
                android:centerX="0.5"
                android:centerY="0.5" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <!-- 圆角 -->
            <corners
                android:radius="15dp" />
        </shape>

    </item>
</layer-list>